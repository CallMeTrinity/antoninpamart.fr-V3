{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-gray-100 py-12">
        <div class="container mx-auto px-4">
            <h1 class="text-3xl font-bold text-center text-gray-800 mb-10">Page d'Administration</h1>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                <div class="bg-white rounded-lg shadow hover:shadow-md transition duration-300 p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Projets</h2>
                    <p>Gérer les projets et leurs détails.</p>
                    <a href="{{ path('admin_projects') }}" class="mt-3 inline-block bg-blue-500 text-white font-semibold py-2 px-4 rounded hover:bg-blue-600">Gérer</a>
                </div>

                <div class="bg-white rounded-lg shadow hover:shadow-md transition duration-300 p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Tags</h2>
                    <p>Organiser les projets par tags.</p>
                    <a href="{{ path('admin_tags') }}" class="mt-3 inline-block bg-green-500 text-white font-semibold py-2 px-4 rounded hover:bg-green-600">Gérer</a>
                </div>

                <div class="bg-white rounded-lg shadow hover:shadow-md transition duration-300 p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Compétences</h2>
                    <p>Ajouter ou modifier les compétences listées.</p>
                    <a href="{{ path('admin_skills') }}" class="mt-3 inline-block bg-purple-500 text-white font-semibold py-2 px-4 rounded hover:bg-purple-600">Gérer</a>
                </div>

                <div class="bg-white rounded-lg shadow hover:shadow-md transition duration-300 p-6">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Informations personnelles</h2>
                    <p>Mettre à jour tes informations personnelles.</p>
                    <a href="{{ path('admin_me') }}" class="mt-3 inline-block bg-pink-500 text-white font-semibold py-2 px-4 rounded hover:bg-pink-600">Gérer</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
