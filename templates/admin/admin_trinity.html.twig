{% extends 'base.html.twig' %}
{% form_theme form 'form/theme.html.twig' %}
{% block body %}
    <div class="flex flex-col items-center justify-center min-h-screen py-12">
        <div class="relative">
            <img src="/media/profile_picture/{{ me.pp }}" alt="Photo de profil" class="rounded-full w-48 h-48 object-cover hover:blur-sm transition duration-300 ease-in-out">
            <div class="absolute inset-0 flex items-center justify-center opacity-0 hover:opacity-100 transition duration-300 ease-in-out">
                <span class="text-white text-xl font-semibold">{{ me.name }}</span>
            </div>
        </div>
        <div class="mt-8 w-full max-w-md mx-auto">
            {{ form_start(form, {'attr': {'class': 'space-y-4', 'enctype': 'multipart/form-data'}}) }}
            {{ form_widget(form) }}
            <button type="submit" class="inline-flex items-center justify-center px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 transition duration-300 ease-in-out">
                Envoyer
            </button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
