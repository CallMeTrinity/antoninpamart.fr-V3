{% extends 'base.html.twig' %}
{% form_theme form 'form/theme.html.twig' %}


{% block title %}Administration des projets{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-6 w-1/2">
        <h1 class="text-xl text-white font-semibold mb-4">Ajouter un nouveau tag</h1>
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn-primary">
            Ajouter
        </button>
        {{ form_end(form) }}
    </div>
{% endblock %}
