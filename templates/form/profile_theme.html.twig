{% use 'form_div_layout.html.twig' %}

{% block modal_widget %}
    {% set type = 'file' %}
    <div class="flex gap-2">
        <label for="{{ id }}" class="btn-primary cursor-pointer w-full text-center">
            {{ form.vars.label }}
            <input type="{{ type }}"
                   hidden
                   class="form-input file-input shadow appearance-none border rounded-lg text-gray-700 leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                   {{ block('widget_attributes') }} />
        </label>
        <twig:ImageModal parameter="{{ form.vars.parameter }}"/>
    </div>
{% endblock modal_widget %}
