{% extends 'base.html.twig' %}

{% block body %}

    <input
            type="text"
            data-model="query"
            placeholder="Results update as you type..."
            class="form-control"
    >

    {% if computed.projects|length > 0 %}
        <div data-loading="addClass(opacity-50)" class="mt-3 row">
            {% for project in computed.projects %}
                {{ include('components/_project.html.twig.html.twig') }}
            {% endfor %}
        </div>
    {% else %}
        <div class="pt-3">Ah! No packages found matching "{{ query }}"</div>
    {% endif %}
    </div>

{% endblock %}

