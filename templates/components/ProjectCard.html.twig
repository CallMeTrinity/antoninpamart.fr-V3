<div {{ attributes }} class="p-4 md:w-1/3">
    <div class="h-full border-2 border-gray-800 rounded-lg overflow-hidden">

        <img class="lg:h-48 md:h-36 w-full object-cover object-center"
             src="media/cover/{{ project.cover }}" alt="{{ project.name }}">

        <div class="p-6">
            <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1">
                Date: {{ project.createdAt }}</h2>
            <h1 class="title-font text-lg font-medium mb-3">{{ project.name }}</h1>
            <p class="leading-relaxed mb-3 text-ellipsis overflow-auto h-48">{{ project.description }}</p>
            <div class="flex items-center flex-wrap ">
                <a class="text-indigo-400 inline-flex items-center md:mb-2 lg:mb-0"
                   href="{{ project.resource }}" target="_blank">Learn More
                    <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor"
                         stroke-width="2" fill="none" stroke-linecap="round"
                         stroke-linejoin="round">
                        <path d="M5 12h14"></path>
                        <path d="M12 5l7 7-7 7"></path>
                    </svg>
                </a>
                <span class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-800">
                                <span class="bg-blue-500 text-white rounded-full px-2 inline-flex text-xs leading-5 font-semibold">
                                    <button type="button"
                                            data-action="live#action"
                                            data-live-action-param="setQuery"
                                            data-live-query-param="{{ project.type }}"
                                        {% if app.request.get('_route') == 'project' %}
                                            disabled
                                        {% endif %}
                                    >
                                        {{ project.type }}
                                    </button>
                                </span>
                            </span>
            </div>
            <div class="flex flex-wrap">
                {% for tag in project.tags %}
                    <span class="text-sm text-gray-500">
                        <button type="button"
                                data-action="live#action"
                                data-live-action-param="setQuery"
                                data-live-query-param="{{ tag.name }}"
                                        {% if app.request.get('_route') == 'project' %}
                                            disabled
                                        {% endif %}
                                    >
                                        {{ tag.name|lower }}
                                    </button></span>
                    {% if not loop.last %}
                        <p class="text-sm text-gray-500 whitespace-pre">, </p>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</div>
