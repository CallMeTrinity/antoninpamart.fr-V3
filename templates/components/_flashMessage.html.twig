<div class="fixed z-50 top-5 right-5 flex flex-col gap-2">
{% for message in app.flashes('success') %}
        <div data-controller="flash" class="alert alert-success bg-green-500 text-white text-sm py-2 px-4 rounded-lg shadow-md transition-opacity" role="alert">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div data-controller="flash" class="alert alert-error bg-red-500 text-white text-sm py-2 px-4 rounded-lg shadow-md transition-opacity" role="alert">
            {{ message }}
        </div>
    {% endfor %}
</div>