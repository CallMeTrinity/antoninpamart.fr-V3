<div {{ attributes }} class="m-4">
    <div class="flex items-center bg-white rounded-full shadow-lg overflow-hidden pl-4 pr-4 py-1">
        <input type="search" id="search" data-model="query" class="w-full leading-tight focus:outline-none focus:ring focus:border-blue-300 focus:ring-blue-200 focus:ring-opacity-50 transition-all duration-500 ease-in-out" placeholder="Rechercher...">
    </div>
    <div class="mt-8 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 animate-fade-in-up">
        {% for p in this.projects %}
            <div class="bg-gray-800 rounded-lg shadow-lg p-6 hover:scale-95 transition-transform duration-300 flex flex-wrap">
                <twig:_project id="{{ p.id }}"></twig:_project>
            </div>
        {% else %}
            <p class="text-gray-400 col-span-full text-center">Aucun projet trouv√© pour {{ query }}</p>
        {% endfor %}
    </div>
</div>
